doctype html
html(ng-app='collabjs')
  head
    title= title
    
    include shared/_meta
    include shared/_styles

    block styles

    script(src='/lib/jquery/js/jquery.min.js')

  body(ng-controller='AppController', ng-init="init('#{collabjs.token}')")
    include shared/menu

    div.container.fill-width
      div.row
        div.col-md-12.col-lg-12
          block content
            div.ng-view

    include shared/_scripts
    block scripts