div(ng-controller='WallController', ng-init="init('#{collabjs.token}', '#{account}');")
  div(ng-controller='UserProfileController')
    include people-profile

  div.page-header
    h3
      i.icon-list-ul
      | &nbsp;Posts

  p.lead(ng-show='hasNoPosts') No posts found...
  include posts-list

  //- Loading progress indicator
  div.text-center(ng-show='isLoadingMorePosts')
    i.icon-spinner.icon-4x.icon-spin

  div.alert.alert-danger.page-error