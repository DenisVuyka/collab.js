extends layout

block content
  div(ng-controller='MentionsController', ng-init='init("#{collabjs.token}");')
    div.page-header
      h3
        i.icon-globe
        | &nbsp;#{title}
    p.lead(ng-show='hasNoPosts') No mentions found...
    include partials/posts-list

    // Loading progress indicator
    div.text-center(ng-show='isLoadingMorePosts')
      i.icon-spinner.icon-4x.icon-spin

    div.alert.alert-error.page-error