div.well.sidebar-nav
  ul.nav.nav-list
    //
    // 'Main' section
    //
    li.nav-header Main
    li
      a(href='/timeline')
        i.icon-list
        &nbsp;Home
    li
      a(href='/mentions')
        i.icon-globe
        &nbsp;Mentions
    li.disabled
      a(href='#')
        i.icon-calendar
        &nbsp;Archive
    li.disabled
      a(href='#')
        i.icon-star
        &nbsp;Favorites
    li.disabled
      a(href='#')
        i.icon-tasks
        &nbsp;Tasks
    //
    // Dynamic categories
    //
    each category in settings.sidebar.categories
      li.nav-header= category.name
      each entry in category.entries
        li
          a(href='#{entry.url}')
            i(class='#{entry.icon}')
            &nbsp; #{entry.text}
    //
    // 'Connect' section
    //
    li.nav-header Connect
    li
      a(href='/people')
        i.icon-user
        &nbsp;People
    li.disabled
      a(href='#')
        i.icon-envelope
        &nbsp;Messages
    li.disabled
      a(href='#')
        i.icon-plus-sign
        &nbsp;Invite Friends
    //
    // 'Help' section
    //
    li.divider
    li
      a(href='/help')
        i.icon-flag 
        &nbsp;Help