p.lead(style='display:none', data-bind='visible: profiles().length == 0') No people found...

ul.media-list(style='display: none', data-bind='visible: profiles().length > 0, foreach: profiles')
  li.media.post
    div.pull-left
      img.media-object(data-bind='attr: { src: picture }', alt='')
    div.media-body
      div.media-heading(style='font-weight: normal')
        span
          a(data-bind='attr: { href: feed }')
            strong(data-bind='text: name')
          a(data-bind="text: '@' + account, attr: { href: feed }", style='color: grey; font-weight: normal; font-size: 90%; padding-left: 5px')
        a.m-btn.blue.pull-right(data-bind='visible: !isFollowed && !isOwnProfile, attr: { href: followAction }', style='min-width:80px') Follow
        a.m-btn.black.pull-right(data-bind='visible: isFollowed && !isOwnProfile, attr: { href: unfollowAction }', style='min-width:80px') Unfollow
        a.m-btn.green.pull-right(data-bind='visible: isOwnProfile', href='/account', style='min-width:80px') Edit profile
      p(style='padding: 0; margin: 0;')
        span.bfh-countries(data-bind='country: location', data-flags='true')
      p(style='padding: 0; margin: 0;')
        a(data-bind='attr: { href: website }, text: website')
      p(style='padding-top: 5px')
        em(data-bind='text: bio')
      ul.profile-stats-list
        li.profile-stats
          a(data-bind='attr: { href: feed }')
            strong(data-bind='text: posts')
            |  posts
        li.profile-stats
          a(data-bind='attr: { href: followingUrl }')
            strong(data-bind='text: following')
            |  following
        li.profile-stats
          a(data-bind='attr: { href: followersUrl }')
            strong(data-bind='text: followers')
            |  followers

// Progress indicator
div(id='page-data-loading', style='text-align: center; display: none;')
  i.icon-spinner.icon-spin.icon-4x

div.alert.alert-error(id='content-loading-error', style='text-align: center; display: none')

block scripts
  script(src='/js/knockout.min.js', type='text/javascript')
  script(src='/js/moment.min.js', type='text/javascript')
  script(src='/js/collabjs.js', type='text/javascript')