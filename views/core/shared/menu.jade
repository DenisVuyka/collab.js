div.navbar.navbar-default.navbar-fixed-top(role='navigation', ng-controller='MenuController')
  div.navbar-header
    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
      span.sr-only Toggle Navigation
      span.fa.fa-bars
    if (collabjs.isAuthenticated)
      a.navbar-brand(href='/#/news')= collabjs.config.ui.brand
    else
      a.navbar-brand(href='/')= collabjs.config.ui.brand

  if (collabjs.isAuthenticated)
    div.collapse.navbar-collapse.navbar-ex1-collapse
      ul.nav.navbar-nav.navbar-right
        li.dropdown
          a.dropdown-toggle(href='', data-toggle='dropdown')
            if (collabjs.user)
              span= collabjs.user.name
            else
              i.fa.fa-cogs.fa-fw
            b.caret
          ul.dropdown-menu
            li
              a(href='/#/account')
                i.fa.fa-user.fa-fw
                | &nbsp;Edit profile
            li.divider
            li
              a(href='/#/help')
                i.fa.fa-flag.fa-fw
                | &nbsp;Help
            li
              a(href='/#/about')
                i.fa.fa-question-circle.fa-fw
                | &nbsp;About
            li.divider
            li
              a(href='/logout')
                i.fa.fa-sign-out.fa-fw
                | &nbsp;Logout

      ul.nav.navbar-nav.menu-actions(menubar='active', data-subpaths='true')
        li
          a(href='/#/news')
            i.fa.fa-th-large.fa-lg
        li
          a(href='/#/mentions')
            i.fa.fa-globe.fa-lg
        li
          a(href='/#/people')
            i.fa.fa-group.fa-lg
        li.dropdown
          a.dropdown-toggle(href='', data-toggle='dropdown')
            i.fa-lg #
            b.caret
          ul.dropdown-menu
            li(ng-repeat='list in searchLists')
              a(ng-href='{{list.url}}') {{list.name}}

        //- dynamic links
        each link in collabjs.config.ui.menu.links
          li
            a(href='#{link.url}', title='#{link.text}')
              span
                if (link.icon)
                  i(class='fa fa-#{link.icon}')
                if (link.text)
                  | &nbsp;#{link.text}