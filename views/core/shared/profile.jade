div.row-fluid
  div.span12.profilebox.blue
    div.header Denis Vuyka @dvuyka
    div.content
      div.media
        div.pull-left
          img.media-object.avatar(src='#{collabjs.config.env.avatarServer}/avatar/#{profile.pictureId}', alt='')
        div.media-body
          h4.media-heading
            | #{profile.name}
            small
              | @#{profile.account}
          if (profile.bio)
            span
              i.icon-pencil
              | &nbsp;
              em #{profile.bio}
          if (profile.website)
            div
              span
                i.icon-globe
                | &nbsp;
                a(href='#{profile.website}') #{profile.website}
          if (profile.location)
            div
              span.bfh-countries(data-flags='true', data-country='#{profile.location}')
          if (isOwnProfile)
            a.m-btn.green.pull-right.profile-btn(href='/account') Edit profile
          else if (profile.isFollowed)
            a.m-btn.black.pull-right.profile-btn(href='/people/#{profile.account}/unfollow') Unfollow
          else
            a.m-btn.blue.pull-right.profile-btn(href='/people/#{profile.account}/follow') Follow
    div.footer
      ul.profile-stats-list(style='padding-top:10px;')
        li.profile-stats
          a.blue(href='/people/#{profile.account}/timeline')
            | #{profile.posts} posts
        li.profile-stats
          a.blue(href='/people/#{profile.account}/following')
            | #{profile.following} following
        li.profile-stats
          a.blue(href='/people/#{profile.account}/followers')
            | #{profile.followers} followers